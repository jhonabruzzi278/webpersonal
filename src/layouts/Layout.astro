---
import Header from "../components/Header.astro";
import "../styles/global.css";
import "@fontsource-variable/onest";
import { ViewTransitions } from 'astro:transitions';

interface Props {
  title?: string;
  description?: string;
}

const { description, title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    
    <!-- SEO Meta Tags -->
    <meta name="description" content={description} />
    <meta name="keywords" content="Jonathan Guerra, desarrollador web, programador, portfolio, Astro, Next.js, Node.js, React, TailwindCSS, frontend, backend, desarrollo web" />
    <meta name="author" content="Jonathan Guerra" />
    <meta name="robots" content="index, follow" />
    <meta name="language" content="Spanish" />
    
    <!-- Viewport -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Favicons y iconos -->
    <link rel="icon" type="image/svg+xml" href="/icono.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/icono.svg" />
    <link rel="icon" type="image/png" sizes="16x16" href="/icono.svg" />
    <link rel="apple-touch-icon" href="/icono.svg" />
    <link rel="mask-icon" href="/icono.svg" color="#000000" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL('/icono.svg', Astro.url)} />
    <meta property="og:site_name" content="Jonathan Guerra - Desarrollador Web" />
    <meta property="og:locale" content="es_ES" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL('/icono.svg', Astro.url)} />
    <meta property="twitter:creator" content="@jonathanguerra278" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={Astro.url} />
    
    <!-- Generator -->
    <meta name="generator" content={Astro.generator} />
    
    <!-- Theme color -->
    <meta name="theme-color" content="#000000" />
    <meta name="msapplication-TileColor" content="#000000" />
    
    <!-- JSON-LD Schema -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Jonathan Guerra",
        "jobTitle": "Desarrollador Web",
        "description": "Desarrollador web especializado en Astro, Next.js y Node.js con más de 2 años de experiencia",
        "url": "https://jonathanguerra.com",
        "sameAs": [
          "https://www.linkedin.com/in/jonathan-guerra-cruz-725b50361/",
          "https://github.com/jhonabruzzi278"
        ],
        "knowsAbout": [
          "JavaScript",
          "TypeScript",
          "React",
          "Astro",
          "Next.js",
          "Node.js",
          "TailwindCSS",
          "Desarrollo Web Frontend",
          "Desarrollo Web Backend"
        ]
      }
    </script>
    
    <!-- View Transitions -->
    <ViewTransitions />
    
    <title>{title}</title>
  </head>
  <body>
    <div class="absolute inset-0 -z-10 h-full w-full items-center px-5 py-24 [background:radial-gradient(125%_125%_at_50%_10%,#000_40%,#63e_100%)]"></div>
    <Header />

    <slot />

  </body>
</html>

<style is:global>
  :root {
    color-scheme: light dark;
  }

  html {
    font-family: "Onest Variable", system-ui, sans-serif;
    scroll-behavior: smooth;
  }

  body {
    display: flex;
    flex-direction: column;
    justify-content: center;
    min-height: 100vh;
    position: relative;
  }

  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }
</style>
