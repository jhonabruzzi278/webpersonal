---
import Header from "../components/Header.astro";
import "../styles/global.css";
import "@fontsource-variable/onest";
import { ClientRouter } from "astro:transitions";
import { getLangFromUrl } from '../utils/i18n.ts';

interface Props {
  title?: string;
  description?: string;
}

const currentLang = Astro.currentLocale || "es";
const lang = getLangFromUrl(Astro.url);
const { description, title } = Astro.props;

const keywords = lang === 'es' 
  ? "Jonathan Guerra, desarrollador web, programador, portfolio, Astro, Next.js, Node.js, React, TailwindCSS, frontend, backend, desarrollo web"
  : "Jonathan Guerra, web developer, programmer, portfolio, Astro, Next.js, Node.js, React, TailwindCSS, frontend, backend, web development";

const language = lang === 'es' ? 'Spanish' : 'English';
---

<!doctype html>
<html lang={currentLang}>
  <head>
    <meta charset="UTF-8" />
    
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content="Jonathan Guerra" />
    <meta name="robots" content="index, follow" />
    <meta name="language" content={language} />
    
    
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
   
    <link rel="icon" type="image/svg+xml" href="/icono.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/icono.svg" />
    <link rel="icon" type="image/png" sizes="16x16" href="/icono.svg" />
    <link rel="apple-touch-icon" href="/icono.svg" />
    <link rel="mask-icon" href="/icono.svg" color="#000000" />
    
   
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL('/icono.svg', Astro.url)} />
    <meta property="og:site_name" content={lang === 'es' ? 'Jonathan Guerra - Desarrollador Web' : 'Jonathan Guerra - Web Developer'} />
    <meta property="og:locale" content={lang === 'es' ? 'es_ES' : 'en_US'} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL('/icono.svg', Astro.url)} />
    <meta property="twitter:creator" content="@jonathanguerra278" />
    
    
    <link rel="canonical" href={Astro.url} />
    
   
    <meta name="generator" content={Astro.generator} />
    
    
    <meta name="theme-color" content="#000000" />
    <meta name="msapplication-TileColor" content="#000000" />
    
    
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Jonathan Guerra",
        "jobTitle": {lang === 'es' ? 'Desarrollador Web' : 'Web Developer'},
        "description": {lang === 'es' 
          ? 'Desarrollador web especializado en Astro, Next.js y Node.js con más de 2 años de experiencia'
          : 'Web developer specialized in Astro, Next.js and Node.js with over 2 years of experience'
        },
        "url": "https://jonathanguerra.com",
        "sameAs": [
          "https://www.linkedin.com/in/jonathan-guerra-cruz-725b50361/",
          "https://github.com/jhonabruzzi278"
        ],
        "knowsAbout": [
          "JavaScript",
          "TypeScript",
          "React",
          "Astro",
          "Next.js",
          "Node.js",
          "TailwindCSS",
          "Desarrollo Web Frontend",
          "Desarrollo Web Backend"
        ]
      }
    </script>
    
    
    <ClientRouter />

    <title>{title}</title>
  </head>
  <body>
    <div class="absolute inset-0 -z-10 h-full w-full items-center px-5 py-24 [background:radial-gradient(125%_125%_at_50%_10%,#000_40%,#1034A6)]"></div>
    <Header />

    <slot />

  </body>
</html>

<style is:global>
  :root {
    color-scheme: light dark;
  }

  html {
    font-family: "Onest Variable", system-ui, sans-serif;
    scroll-behavior: smooth;
  }

  body {
    display: flex;
    flex-direction: column;
    justify-content: center;
    min-height: 100vh;
    position: relative;
  }

  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }
</style>
