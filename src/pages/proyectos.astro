---
import Layout from "../layouts/Layout.astro";
import SectionContainer from "../components/SectionContainer.astro";
import ProjectsList from "../components/ProjectsList.astro";
import Code from "../components/icons/Code.astro";
import Footer from "../components/Footer.astro";
import { useTranslations } from '../utils/i18n.ts';

const t = useTranslations('es');
---

<Layout
  title={t('meta.projects-title')}
  description={t('meta.projects-description')}
>
  <main class="flex flex-col min-h-[100dvh] space-y-10 mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <SectionContainer class:list={["py-24 sm:py-44 pb-16 sm:pb-24"]}>
      <div class="mx-auto w-full max-w-4xl space-y-8">
        <!-- Botón de regreso con animación -->
        <div class="flex justify-start animate-in fade-in slide-in-from-left-5 duration-700">
          <a 
            href="/"
            class="inline-flex items-center gap-2 text-white/80 hover:text-white transition-all duration-300 group bg-white/5 hover:bg-white/10 px-4 py-2 rounded-full border border-white/10 hover:border-white/20"
          >
            <svg class="w-4 h-4 transition-transform group-hover:-translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
            {t('projects.back-home')}
          </a>
        </div>
        
        <!-- Header de la página con animaciones escalonadas -->
        <div class="text-center space-y-6">
          <h1 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold text-white text-balance flex items-center justify-center gap-3 animate-in fade-in slide-in-from-bottom-6 duration-700 delay-200">
            <Code class:list={["size-8 sm:size-10"]} />
            {t('projects.title')}
          </h1>
          <p class="text-lg md:text-xl lg:text-2xl text-white/90 max-w-3xl mx-auto font-medium leading-relaxed animate-in fade-in slide-in-from-bottom-6 duration-700 delay-400">
            {t('projects.description')}
          </p>
          </p>
        </div>

        <!-- Lista de proyectos con animación -->
        <div class="animate-in fade-in slide-in-from-bottom-8 duration-700 delay-600">
          <ProjectsList />
        </div>

        <!-- Llamada a la acción con animación -->
        <div class="text-center space-y-4 pt-8 animate-in fade-in slide-in-from-bottom-6 duration-700 delay-800">
          <p class="text-base md:text-lg lg:text-xl text-white/80 font-medium">
            {t('projects.cta')}
          </p>
          <a 
            href="mailto:jonathanguerra278@gmail.com"
            class="inline-flex items-center px-6 py-3 text-base md:text-lg font-semibold text-white bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 rounded-xl transition-all duration-300 shadow-lg hover:shadow-xl hover:scale-105"
          >
            {t('projects.contact')}
          </a>
        </div>
      </div>
    </SectionContainer>

    <!-- Footer -->
    <Footer />
  </main>
</Layout>
