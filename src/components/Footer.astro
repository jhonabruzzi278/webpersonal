---
import { getLangFromUrl, useTranslations } from '../utils/i18n.ts';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Helper para generar URLs correctas
function getLocalizedUrl(targetLang: string, path: string = '') {
  if (targetLang === 'es') {
    return path ? `/${path}` : '/';
  }
  return path ? `/en/${path}` : '/en';
}

const footerText = lang === 'es' 
  ? '© 2025 Desarrollado con ❤️ por' 
  : '© 2025 Crafted with ❤️ by';

const contactText = lang === 'es' ? 'Contacto' : 'Contact';
---

<footer class="mt-16 py-8">
  <div class="w-full mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
    <!-- Barra de iconos sociales -->
    <div class="flex justify-center">
      <div class="bg-black/90 backdrop-blur-sm rounded-full px-6 py-4 shadow-2xl border border-white/10 
                  transform hover:scale-105 transition-all duration-300 ease-out
                  animate-fade-in-up">
        <div class="flex items-center gap-6">
          
          <!-- Home -->
          <a 
            href={getLocalizedUrl(lang, '')} 
            class="text-white/70 hover:text-blue-400 transition-all duration-300 ease-out
                   transform hover:scale-110 hover:-translate-y-1 
                   relative group"
            aria-label={lang === 'es' ? 'Inicio' : 'Home'}
          >
            <div class="absolute inset-0 bg-blue-500/20 rounded-full scale-0 group-hover:scale-150 
                        transition-transform duration-300 ease-out opacity-30"></div>
            <svg class="w-5 h-5 relative z-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
          </a>

          <!-- Proyectos -->
          <a 
            href={getLocalizedUrl(lang, lang === 'es' ? 'proyectos' : 'projects')} 
            class="text-white/70 hover:text-blue-400 transition-all duration-300 ease-out
                   transform hover:scale-110 hover:-translate-y-1 hover:rotate-3
                   relative group"
            aria-label={lang === 'es' ? 'Proyectos' : 'Projects'}
          >
            <div class="absolute inset-0 bg-blue-500/20 rounded-full scale-0 group-hover:scale-150 
                        transition-transform duration-300 ease-out opacity-30"></div>
            <svg class="w-5 h-5 relative z-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
            </svg>
          </a>

          <!-- GitHub -->
          <a 
            href="https://github.com/jhonabruzzi278" 
            target="_blank" 
            rel="noopener noreferrer"
            class="text-white/70 hover:text-white transition-all duration-300 ease-out
                   transform hover:scale-110 hover:-translate-y-1 hover:rotate-12
                   relative group"
            aria-label="GitHub"
          >
            <div class="absolute inset-0 bg-white/10 rounded-full scale-0 group-hover:scale-150 
                        transition-transform duration-300 ease-out opacity-40"></div>
            <svg class="w-5 h-5 relative z-10 group-hover:animate-pulse" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.30.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
          </a>

          <!-- LinkedIn -->
          <a 
            href="https://www.linkedin.com/in/jonathan-guerra-cruz-725b50361/" 
            target="_blank" 
            rel="noopener noreferrer"
            class="text-white/70 hover:text-blue-400 transition-all duration-300 ease-out
                   transform hover:scale-110 hover:-translate-y-1 hover:-rotate-6
                   relative group"
            aria-label="LinkedIn"
          >
            <div class="absolute inset-0 bg-blue-500/20 rounded-full scale-0 group-hover:scale-150 
                        transition-transform duration-300 ease-out opacity-30"></div>
            <svg class="w-5 h-5 relative z-10 group-hover:animate-bounce" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>

          <!-- X (Twitter) -->
          <a 
            href="#" 
            class="text-white/70 hover:text-white transition-all duration-300 ease-out
                   transform hover:scale-110 hover:-translate-y-1 hover:rotate-6
                   relative group"
            aria-label="X (Twitter)"
          >
            <div class="absolute inset-0 bg-white/10 rounded-full scale-0 group-hover:scale-150 
                        transition-transform duration-300 ease-out opacity-40"></div>
            <svg class="w-5 h-5 relative z-10 group-hover:animate-spin" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
          </a>

          <!-- YouTube -->
          <a 
            href="#" 
            class="text-white/70 hover:text-red-400 transition-all duration-300 ease-out
                   transform hover:scale-110 hover:-translate-y-1 hover:-rotate-12
                   relative group"
            aria-label="YouTube"
          >
            <div class="absolute inset-0 bg-red-500/20 rounded-full scale-0 group-hover:scale-150 
                        transition-transform duration-300 ease-out opacity-30"></div>
            <svg class="w-5 h-5 relative z-10 group-hover:animate-pulse" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
            </svg>
          </a>

          <!-- Settings/Theme -->
          <button 
            class="text-white/70 hover:text-purple-400 transition-all duration-300 ease-out
                   transform hover:scale-110 hover:-translate-y-1 
                   relative group"
            aria-label={lang === 'es' ? 'Configuración' : 'Settings'}
          >
            <div class="absolute inset-0 bg-purple-500/20 rounded-full scale-0 group-hover:scale-150 
                        transition-transform duration-300 ease-out opacity-30"></div>
            <svg class="w-5 h-5 relative z-10 group-hover:animate-spin group-hover:rotate-180 transition-transform duration-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
          </button>
        </div>
      </div>
    </div>

    <!-- Copyright simple -->
    <div class="text-center mt-8 animate-fade-in-up animation-delay-300">
      <p class="text-sm text-white/60 hover:text-white/80 transition-colors duration-300">
        {footerText} <span class="font-medium text-white/90 hover:text-blue-400 transition-colors duration-300">Jonathan Guerra</span>
      </p>
    </div>
  </div>
</footer>

<style>
  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in-up {
    animation: fade-in-up 0.8s ease-out forwards;
  }

  .animation-delay-300 {
    animation-delay: 0.3s;
    opacity: 0;
  }

  /* Animación de entrada escalonada para los iconos */
  .flex.items-center.gap-6 > * {
    animation: fade-in-up 0.6s ease-out forwards;
    opacity: 0;
  }

  .flex.items-center.gap-6 > *:nth-child(1) { animation-delay: 0.1s; }
  .flex.items-center.gap-6 > *:nth-child(2) { animation-delay: 0.2s; }
  .flex.items-center.gap-6 > *:nth-child(3) { animation-delay: 0.3s; }
  .flex.items-center.gap-6 > *:nth-child(4) { animation-delay: 0.4s; }
  .flex.items-center.gap-6 > *:nth-child(5) { animation-delay: 0.5s; }
  .flex.items-center.gap-6 > *:nth-child(6) { animation-delay: 0.6s; }
  .flex.items-center.gap-6 > *:nth-child(7) { animation-delay: 0.7s; }

  /* Efectos de hover mejorados */
  .group:hover .absolute {
    animation: ripple 0.6s ease-out;
  }

  @keyframes ripple {
    0% {
      transform: scale(0);
      opacity: 1;
    }
    50% {
      opacity: 0.6;
    }
    100% {
      transform: scale(1.5);
      opacity: 0;
    }
  }

  /* Animación flotante para toda la barra */
  .bg-black\/90 {
    animation: float 6s ease-in-out infinite;
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-5px);
    }
  }

  /* Efectos de hover adicionales */
  .group:hover svg {
    filter: drop-shadow(0 4px 8px rgba(59, 130, 246, 0.3));
  }

  /* Glow effect para la barra oscura */
  .bg-black\/90 {
    box-shadow: 0 0 20px rgba(59, 130, 246, 0.1);
  }

  .bg-black\/90:hover {
    box-shadow: 0 0 30px rgba(59, 130, 246, 0.2);
  }
</style>
